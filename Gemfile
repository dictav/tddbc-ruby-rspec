source 'https://rubygems.org'

gem 'rspec'

#guardを使って自動テストを実施する場合
gem 'guard-rspec'

# Filesystem Handling
## linux
gem 'rb-inotify', :require => false
## mac
gem 'rb-fsevent', :require => false
## windows
gem 'rb-fchange', :require => false
# Notification
## mac
gem 'terminal-notifier-guard', :require => false
## linux/*BSD
gem 'libnotify', :require => false

